datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Document {
  id             Int      @id @default(autoincrement())
  url            String
  date_published  DateTime? 
  date_crawled    DateTime @default(now())
  title          String
  topics         String[]
  chunks         Chunk[]
}

model Chunk {
  id          Int      @id @default(autoincrement())
  document_id  Int
  index_in_doc       Int
  embedding   Unsupported("vector(1536)")?
  Document    Document @relation(fields: [document_id], references: [id])
  content     String
}